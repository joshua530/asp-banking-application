@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="bg-dark">
    <div class="text-white container py-5">
        <h1 class="mt-5 mb-3">@ViewData["Title"]</h1>
        @{
            if (User.Identity.IsAuthenticated)
            {
                <form class="form-inline mb-5" asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-primary">Click here to Logout</button>
                </form>
            }
            else
            {
                <p>You have successfully logged out of the application.</p>
            }
        }
    </div>
</div>
