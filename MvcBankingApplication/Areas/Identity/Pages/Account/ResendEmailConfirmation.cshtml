@page
@model ResendEmailConfirmationModel
@{
  ViewData["Title"] = "Resend email confirmation";
}

<div class="bg-dark">
  <div class="text-white container py-5">
    <h1>@ViewData["Title"]</h1>
    <h2 class="mb-3">Enter your email.</h2>
    <div class="row">
      <div class="col-md-4">
        <form method="post">
          <div asp-validation-summary="All" class="text-danger"></div>
          <div class="form-group">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>
          <button type="submit" class="w-100 btn btn-blue mt-3 rounded-0">Resend</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
