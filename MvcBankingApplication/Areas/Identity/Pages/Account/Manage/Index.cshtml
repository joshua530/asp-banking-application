@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <div class="mb-4 bg-dark text-light mt-3 mt-md-0">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form enctype="multipart/form-data" id="profile-form" method="post"
            class="bg-dark py-3 px-2 px-md-3 rounded profile-edit-form text-light border border-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5 class="mb-1 text-uppercase">@ViewData["Title"]</h5>
            <div class="form-group my-3">
                <img src="@Model.ImageUrl" class="form-img" alt="@Model.Input.UserName">
                <div>
                    <label asp-for="Input.UserImage"></label>
                    <br>
                    <input asp-for="Input.UserImage" type="file" id="avatar" accept="image/png,image/jpeg">
                    <br>
                    <span asp-validation-for="Input.UserImage" class="text-red"></span>
                </div>
            </div>
            <div class="form-group my-4">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control">
                <span asp-validation-for="Input.UserName" class="text-red"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control">
                <span asp-validation-for="Input.FirstName" class="text-red"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control">
                <span asp-validation-for="Input.LastName" class="text-red"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="text-red"></span>
            </div>
            <div class="d-flex justify-content-end pt-3">
                <button type="submit" class="btn btn-success btn-blue w-100 rounded-0">Update</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
