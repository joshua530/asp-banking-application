@page
@model RegisterModel
@{
  ViewData["Title"] = "Register";
}

<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">FILL IN YOUR DETAILS</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input asp-for="Input.FirstName" class="form-control form-control-lg" autocomplete="username"
                        aria-required="true" />
                      <label asp-for="Input.FirstName"></label><br>
                      <span asp-validation-for="Input.FirstName" class="text-red"></span>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input asp-for="Input.LastName" class="form-control form-control-lg" autocomplete="username"
                        aria-required="true" />
                      <label asp-for="Input.LastName"></label><br>
                      <span asp-validation-for="Input.LastName" class="text-red"></span>
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="Input.UserName" class="form-control form-control-lg" autocomplete="username"
                    aria-required="true" />
                  <label asp-for="Input.UserName"></label><br>
                  <span asp-validation-for="Input.UserName" class="text-red"></span>
                </div>

                <div class="form-outline mb-4">
                  <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email"
                    aria-required="true" />
                  <label asp-for="Input.Email"></label><br>
                  <span asp-validation-for="Input.Email" class="text-red"></span>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="username"
                        aria-required="true" />
                      <label asp-for="Input.Password"></label><br>
                      <span asp-validation-for="Input.Password" class="text-red"></span>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg"
                        autocomplete="username" aria-required="true" />
                      <label asp-for="Input.ConfirmPassword"></label><br>
                      <span asp-validation-for="Input.ConfirmPassword" class="text-red"></span>
                    </div>
                  </div>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <button type="submit" class="btn btn-success btn-blue w-100 rounded-0">Submit
                    form</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
