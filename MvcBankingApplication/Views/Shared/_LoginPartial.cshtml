@using Microsoft.AspNetCore.Identity
@using MvcBankingApplication.Models.Users

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="d-flex align-items-center flex-wrap">
            <a id="manage" class="text-white me-3 me-sm-5 site-link" asp-area="Identity" asp-page="/Account/Manage/Index"
            title="Manage">Hello @UserManager.GetUserName(User)!</a>

            <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn text-white site-link">Logout</button>
            </form>
        </div>
    }
    else
    {
        <div>
            <a asp-area="Identity" asp-page="/Account/Register" class="text-white me-3 me-sm-5 site-link">Sign up</a>
            <a asp-area="Identity" asp-page="/Account/Login" class="text-white me-3 me-sm-5 site-link">Login</a>
        </div>
    }
</ul>
