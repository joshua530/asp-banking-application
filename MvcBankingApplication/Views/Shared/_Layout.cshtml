<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - MvcBankingApplication</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
  <nav class="navbar px-2 sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand text-white text-bolder" href="/">YourBank</a>
      <div>
        <a asp-controller="Customers" asp-action="SignUp" class="text-white me-3 me-sm-5 site-link">Sign up</a>
        <a asp-controller="Home" asp-action="Login" class="text-white me-3 me-sm-5 site-link">Login</a>
      </div>
    </div>
  </nav>

  <div>
    @RenderBody()
  </div>

  <footer class="py-5">
    <div class="container">
      <div class="d-flex justify-content-between flex-wrap">
        <a asp-controller="Home" asp-action="Index" class="site-link">YourBank.com</a>
        <p class="ms-2">
          <a asp-controller="Home" asp-action="Privacy" class="d-block d-sm-inline site-link">Privacy</a>
          <a asp-controller="Home" asp-action="BranchesNearUser" class="d-block d-sm-inline ms-sm-2 site-link">Our
            Branches</a>
          <a asp-controller="Home" asp-action="About" class="d-block d-sm-inline ms-sm-2 site-link">About us</a>
        </p>
      </div>
    </div>
    <div class="w-100 border-top my-3"></div>
    <div class="container">
      <div class="d-flex justify-content-center py-2">
        <div class="text-center">
          <h2 class="mb-3 text-uppercase text-lighter">Contact Us</h2>
          <div class="d-flex justify-content-around mb-3">
            <a href="#" class="site-link">
              <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" class="site-link">
              <i class="fa-brands fa-twitter"></i>
            </a>
            <a href="#" class="site-link">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="site-link">
              <i class="fab fa-google-plus-g"></i>
            </a>
          </div>
          <div>
            &copy; Copyright @DateTime.Now.Year. All rights reserved
          </div>
        </div>
      </div>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
