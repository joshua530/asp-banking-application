@model MvcBankingApplication.Models.ViewModels.CashierLimitModel

@{
  ViewData["Title"] = "Update cashier limit";
}

<div class="bg-dark">
  <div class="text-white container py-5">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <div class="row">
      <div class="col-md-4">
        <form method="post">
          <div asp-validation-summary="ModelOnly" class="text-red"></div>
          <div class="form-group mb-4 mt-2">
            <label class="form-label" asp-for="CashierId"></label>
            <input asp-for="CashierId" class="form-control" aria-required="true" />
            <span asp-validation-for="CashierId" class="text-red"></span>
          </div>
          <div class="form-group">
            <label class="form-label" asp-for="NewLimit"></label>
            <input asp-for="NewLimit" class="form-control" aria-required="true" />
            <span asp-validation-for="NewLimit" class="text-red"></span>
          </div>
          <button type="submit" class="w-100 btn btn-blue mt-3 rounded-0">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>
