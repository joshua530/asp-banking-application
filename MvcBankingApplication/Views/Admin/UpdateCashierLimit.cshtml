@model MvcBankingApplication.Models.Users.Admin

@{
  ViewData["Title"] = "Update cashier limit";
}

<div class="py-5 bg-dark d-flex justify-content-center">
  <form class="bg-light py-4 mt-4 px-2 px-md-3 rounded">
    <h5 class="mb-5 text-uppercase text-dark text-light">update cashier limit</h5>
    <div class="form-outline mb-4">
      <input type="text" id="cashier-id" class="form-control form-control-lg" />
      <label class="form-label" for="cashier-id">Cashier id</label>
    </div>
    <div class="form-outline mb-4">
      <input type="number" id="new-limit" class="form-control form-control-lg" />
      <label class="form-label" for="new-limit">New limit</label>
    </div>

    <div class="d-flex justify-content-end pt-3">
      <button type="button" class="btn btn-success btn-blue w-100 rounded-0">Update</button>
    </div>
  </form>
</div>
