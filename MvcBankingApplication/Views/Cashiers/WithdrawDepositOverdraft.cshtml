@model MvcBankingApplication.Models.ViewModels.WithdrawDepositOverdraftModel
@using MvcBankingApplication.Models.ViewModels

@{
  ViewData["Title"] = "withdraw,deposit,overdraft";
  List<string> errors;
  if (ViewData["FatalErrors"] != null)
    errors = (List<string>)ViewData["FatalErrors"];
  else
    errors = new List<string>();
}

<div class="bg-dark">
  <div class="text-white container py-5">
    <h2 class="mb-3">Withdrawals, deposits and overdrafts</h2>
    <div class="row">
      <div class="col-md-4">
        <form method="post">
          <ul>
            @foreach (var err in errors)
            {
              <li class="text-red">@err</li>
            }
          </ul>
          <div class="form-group mb-4">
            <label class="form-label" asp-for="TransactionType"></label>
            <select class="form-control" asp-for="TransactionType"
              asp-items="Html.GetEnumSelectList<TransactionType>()"></select>
          </div>
          <div class="form-group mb-4">
            <label class="form-label" asp-for="AccountNumber"></label>
            <input placeholder="Enter account number" asp-for="AccountNumber" class="form-control"
              aria-required="true" />
            <span asp-validation-for="AccountNumber" class="text-red"></span>
          </div>
          <div class="form-group">
            <label class="form-label" asp-for="Amount"></label>
            <input placeholder="Enter amount" asp-for="Amount" class="form-control" aria-required="true" />
            <span asp-validation-for="Amount" class="text-red"></span>
          </div>
          <button type="submit" class="w-100 btn btn-blue mt-3 rounded-0">Transact</button>
        </form>
      </div>
    </div>
  </div>
</div>
