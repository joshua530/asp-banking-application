@model MvcBankingApplication.Models.Users.CashierModel

@{
    ViewData["Title"] = "update staff profile - {username}";
}

<div class="py-5 bg-dark d-flex justify-content-center">
    <form class="bg-light py-4 mt-4 px-2 px-md-3 rounded w-60 text-white">
        <h5 class="mb-5 text-uppercase text-dark text-light">update profile</h5>
        <div class="form-group my-3">
            <img src="/images/10.jpg" class="form-img" alt="">
            <div>
                <label for="avatar">Choose a profile picture</label>
                <br>
                <input type="file" id="avatar" accept="image/png,image/jpeg">
            </div>
        </div>

        <div class="form-group my-2">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control">
        </div>
        <div class="form-group my-2">
            <label for="first-name">First name</label>
            <input type="text" name="first-name" id="first-name" class="form-control">
        </div>
        <div class="form-group my-2">
            <label for="last-name">Last name</label>
            <input type="text" name="last-name" id="last-name" class="form-control">
        </div>
        <div class="form-group my-2">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" class="form-control">
        </div>
        <a href="#" class="site-link">update password</a>
        <div class="d-flex justify-content-end pt-3">
            <button type="button" class="btn btn-success btn-blue w-100 rounded-0">Update</button>
        </div>
    </form>
</div>
