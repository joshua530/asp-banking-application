@model MvcBankingApplication.Models.ViewModels.CashierWireTransferModel

@{
  ViewData["Title"] = "wire transfer";
  List<string> errors;
  if (ViewData["FatalErrors"] != null)
    errors = (List<string>)ViewData["FatalErrors"];
  else
    errors = new List<string>();
}

<div class="bg-dark">
  <div class="text-white container py-5">
    @if (TempData["Message"] != null)
    {
      <div>
        <p class="alert alert-info">@TempData["Message"]</p>
      </div>
    }
    <h2 class="mb-3 text-capitalize">@ViewData["Title"]</h2>
    <div class="row">
      <div class="col-md-4">
        <form method="post">
          <ul>
            @foreach (var err in errors)
            {
              <li class="text-red">@err</li>
            }
          </ul>
          <div class="form-group mb-4">
            <label class="form-label" asp-for="From"></label>
            <input placeholder="Enter account number" asp-for="From" class="form-control" aria-required="true" />
            <span asp-validation-for="From" class="text-red"></span>
          </div>
          <div class="form-group mb-4">
            <label class="form-label" asp-for="To"></label>
            <input placeholder="Enter account number" asp-for="To" class="form-control" aria-required="true" />
            <span asp-validation-for="To" class="text-red"></span>
          </div>
          <div class="form-group">
            <label asp-for="Amount" class="form-label"></label>
            <input placeholder="Enter amount" asp-for="Amount" class="form-control" aria-required="true" />
            <span asp-validation-for="Amount" class="text-red"></span>
          </div>
          <button type="submit" class="w-100 btn btn-blue mt-3 rounded-0">Post Transaction</button>
        </form>
      </div>
    </div>
  </div>
</div>
