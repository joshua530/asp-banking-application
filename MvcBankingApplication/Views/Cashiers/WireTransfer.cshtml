@model MvcBankingApplication.Models.Users.Cashier

@{
  ViewData["Title"] = "wire transfer - {username}";
}

<div class="py-5 bg-dark d-flex justify-content-center">
  <form class="bg-light py-4 mt-4 px-2 px-md-3 rounded">
    <h5 class="mb-5 text-uppercase text-dark text-light">wire transfer</h5>
    <div class="form-outline mb-4">
      <input type="number" id="account-number-from" class="form-control form-control-lg" />
      <label class="form-label" for="account-number-from">From</label>
    </div>
    <div class="form-outline mb-4">
      <input type="number" id="account-number-to" class="form-control form-control-lg" />
      <label class="form-label" for="account-number-to">Transfer to</label>
    </div>
    <div class="form-outline mb-4">
      <input type="number" id="amount" class="form-control form-control-lg" />
      <label class="form-label" for="amount">Amount</label>
    </div>

    <div class="d-flex justify-content-end pt-3">
      <button type="button" class="btn btn-success btn-blue w-100 rounded-0">Post Transaction</button>
    </div>
  </form>
</div>
