@model MvcBankingApplication.Models.ViewModels.CustomerHomeModel

@{
  ViewData["Title"] = "Home Page";
}

<div class="bg-dark py-3">
  <div class="container text-white">
    <p>Hello <b>@Model.User.FullName</b>, below is a list of services you can access</p>
    <section class="my-5">
      <h2>Make transaction</h2>
      <ul>
        <li>
          <a href="wire-transfer.html" class="site-link">Wire transfer</a>
        </li>
        <li>
          <a href="overdraft.html" class="site-link">Overdraft</a>
        </li>
        <li>
          <i>To make a cash withdrawal, go to the <a href="#">Nearest Branch</a></i>
        </li>
      </ul>
    </section>
    <hr>
    <section class="my-5">
      <h2 colspan="3">Recent Transactions</h2>
      <table class="table text-white">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Amount</th>
            <th scope="col">Type</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>22 March 2021</td>
            <td>2000</td>
            <td class="text-green">DR</td>
          </tr>
          <tr>
            <td>12 Apr 2020</td>
            <td>10000</td>
            <td class="text-red">CR</td>
          </tr>
          <tr>
            <td>11 Apr 2020</td>
            <td>200000</td>
            <td class="text-green">DR</td>
          </tr>
        </tbody>
      </table>
      <a href="#" class="site-link d-block mt-4">view more transactions</a>
    </section>
    <hr>
    <section class="my-5">
      <h3>Account Summary</h3>
      <ul>
        <li>Balance: @Model.Account.Balance</li>
        <li>Account number: @Model.Account.Id</li>
        <li>Date opened: @Html.DisplayFor(m => m.User.DateCreated)</li>
      </ul>
    </section>
    <hr>
    <section class="my-5 container">
      <h2 class="mb-3">Stock quotes</h2>
      <div class="row">
        @foreach (var Stock in Model.Stocks)
        {
          var textClass = "";
          var faClass = "fa-regular fa-dash";
          if (Stock.PriceChange == "up")
          {
            textClass = "text-green";
            faClass = "fa-solid fa-arrow-up";
          }
          else if (Stock.PriceChange == "down")
          {
            textClass = "text-red";
            faClass = "fa-solid fa-arrow-down";
          }

          <div class="border rounded p-2 col-11 col-sm-3 col-lg-2 m-1">
            <div>
              <h5>@Stock.Symbol</h5>
            </div>
            <div class="d-flex flex-wrap">
              <p class="me-3">$@Stock.Price</p>
              <p class="@textClass">
                <i class="@faClass"></i>
                @Stock.PercentChange
              </p>
            </div>
          </div>
        }
      </div>
      <a target="_blank" href="@Model.StockMarketLink" class="site-link d-block mt-3">view more stocks</a>
    </section>
  </div>
</div>
